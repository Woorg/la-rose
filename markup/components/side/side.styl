.side
	&__block
		margin-bottom 0px
	&__buttons
		margin-bottom 0px
		background url('../images/general/side-line.png') 0 0 no-repeat, url('../images/general/side-line.png') 0 100% no-repeat
		font-size 0
		white-space nowrap
		+below($tablet)
			background url('../images/general/side-line.png') 0 0 repeat-x, url('../images/general/side-line.png') 0 100% repeat-x

	&__button
		padding 18px r-percent(18, 280) 15px r-percent(18, 280)
		display inline-block
		vertical-align top
		color #564d3e
		font-family $pt-sans-bldit
		font-size 16px
		line-height 30px
		text-decoration none
		&:first-child
			background url('../images/general/product-bottom-vertical.png') 100% 50% no-repeat
			+below($tablet)
				background url('../images/general/product-bottom-vertical.png') 100% 50% repeat-y

		+below($tablet)
			width 50%
	&__vk-widget
		padding 20px r-percent(13,280) 20px r-percent(10,280)
		background url('../images/general/side-line.png') 0 100% no-repeat
		+below($tablet)
			background-repeat repeat-x
		img
			max-width 100%
.side-nav
	+below($tablet)
		display none
	&__title
		margin-bottom 8px
		color $text-color
		font-family $pt-serif-bldit
		font-size 22px
		line-height 30px
		a
			color inherit
			text-decoration underline
			&:hover
				text-decoration none
	&__list
		margin-bottom 32px
		margin-left 26px
	&__item
		margin-bottom 0px
	&__link
		color $text-color
		font-family $pt-sans-bldit
		font-size 16px
		line-height 30px
		text-decoration underline
		&:hover
			text-decoration none

.search-form
	&__form
		font-size 0
	&__label,
	&__field,
	&__submit
		display inline-block
		vertical-align top
	&__label
		margin-right 5px
		padding-top 5px
		color $text-color
		font-family $pt-sans-bldit
		font-size 16px
		line-height 25px
		cursor pointer
	&__field
		margin-right 10px
		width 420px
		input
			border none
			border-bottom 1px solid $text-color
			padding 4px 10px
			width 100%
			height 30px
			background transparent
			color $text-color
			font-family $pt-sans-bldit
			font-size 16px
			line-height 30px
	&__submit
		margin-top 4px
		border none
		background-color transparent
		bg($search-icon)

.relative
	position relative
	&__title
		margin-bottom 18px
		color #5d523b
		font-family $pt-sans-bldit
		font-size 20px
		line-height 27px
	&__list
		position relative
		font-size 0
	&__item
		&:last-child
			margin-right 0
	&__item-image
		margin-bottom 12px
		// width 100%
		height 170px
		background-color #fff
		text-align center
		border 2px solid #ccc
	.relative__item-image
		img
			max-width 100%
			height auto
			display inline-block
			vertical-align middle
	&__item-image
		a
			display block
			height 100%
			text-decoration none
			&:after
				content ""
				display inline-block
				vertical-align middle
				height 100%

	&__item-title
		// margin-bottom 20px
		height 46px
		color #5d523b
		font-family $pt-sans-bldit
		font-size 20px
		line-height 22px
		text-align center
		white-space normal
		overflow hidden
		a
			text-decoration none
			color inherit
			&:hover
				text-decoration underline
		+below($tablet)
			font-size 20px

	&__item-bottom
		margin auto
		padding-top 4px
		padding-bottom 6px
		// width 160px
		width 100%
		font-size 0
		background url('../images/general/dots.png') 100% 0 repeat-x , url('../images/general/dots.png') 100% 100% repeat-x
		white-space nowrap
		clr()

	&__item-bottom-left,
	&__item-order
		width 50%
		display inline-block
		vertical-align top
	&__item-bottom-left
		padding 10px 5px 3px
		background url('../images/general/dots-vert.png') 100% 50% repeat-y
		text-align center
	&__item-price
		display inline-block
		vertical-align top
		color #5d523b
		font-family $pt-sans-bld
		line-height 16px
		font-size 24px
		text-align center
		span
			padding-top 4px
			display block
			font-family $pt-sans-reg
			font-size 15px
		+below($tablet)
			font-size 20px
			span
				font-size 13px
	&__item-order
		padding 6px 5px
		text-align center
		.spinner
			margin auto

	&__item-quant
		margin-bottom 10px
		text-align center
	&__order-button
		position relative
		margin-left 22px
		display inline-block
		vertical-align top
		color #5d523b
		font-family $pt-sans-reg
		font-size 16px
		line-height 1px
		&:hover
			text-decoration none
		&:after
			position absolute
			top 50%
			left -22px
			content ""
			margin-top -9px
			bg($basket-small-icon)
		+below($tablet)
			font-size 14px
		+below($mobile-l)
			margin-left 0
			&:after
				display none

.relative_style-first
	.relative__list
		padding-left 37px
		padding-right 33px
		+below($tablet)
			padding-left 26px
			padding-right 26px
		+below($mobile-l)
			padding-left 0
			padding-right 0
	.owl-nav
		position absolute
		top 47%
		left 0
		right 0
		z-index 0
		+below($mobile-l)
			top 32%
	.owl-prev,
	.owl-next
		position absolute
		top 0
		content ""
		margin-top -18px
		z-index 1
	.owl-next
		right 0
		bg($relative-right)
	.owl-prev
		left 0
		bg($relative-left)

.relative_style-second
	.relative__list
		margin-left 0
		margin-right 0
		text-align justify
		white-space nowrap
		&:after
			content ""
			display inline-block
			vertical-align top
			width 100%
		+below($tablet-l)
			white-space normal
	.relative__item
		margin-right r-percent(44,825)
		width r-percent(176, 825)
		display inline-block
		vertical-align top
		&:last-child
			margin-right 0
		+below($tablet-l)
			margin-right 3%
			width 30%
			&:nth-child(4)
				display none
		+below(576px)
			width 48%
			&:nth-child(3)
				display none
			&:nth-child(2)
				margin-right 0



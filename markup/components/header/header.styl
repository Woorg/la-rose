	.tabs__nav
		margin-bottom 10px
		padding-left 20px
		padding-right 20px
		font-size 0
		clr()
	.tabs__nav-item
		display inline-block
		vertical-align top
		width 50%
	.tabs__nav-link
		padding 10px
		display block
		background #d7d1cd
		font-family $pt-sans-bld
		color $text-color
		text-align center
		text-decoration none
		&:hover
			text-decoration underline
	.tabs__nav-item
		&.active
			.tabs__nav-link
				background transparent

	.tabs_active
		top 60px
		z-index 10
		// padding-top 16px
		// display none
		visibility visible
		background rgba(245,240,237, 1)
		transform translateY(0)
		+below($tablet)
			display block
	// .tabs__w
	.tabs__tab
		padding 0 20px 0


	&__form-title
		margin-bottom 20px
		color #564d3e
		font-family $pt-sans-bldit
		font-size 22px
		line-height 1
		text-align center


	.tabs
		position absolute
		top 0
		left 0
		right 0
		visibility hidden
		transform translateY(-100%)
		transition transform .3s ease
	.tabs__w-w
		position relative

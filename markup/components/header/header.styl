.header
	position relative
	z-index 10
	&__in
		@extends .in
		font-size 0
		clr()
	.header__in
		position relative
		padding-top 13px
		padding-bottom 10px
		min-height 120px
		&:before
			position absolute
			right -30px
			left -30px
			bottom 0
			content ""
			width 1260px
			height 8px
			background transparent url('%=static=%/general/line.png') 0 0 repeat-x
		+below($tablet)
			padding-top 60px
			min-height 180px
		+below($mobile)
			min-height 170px
	&__logo,
	&__phones,
	&__working-hours,
	&__basket,
	&__user-auth
		display inline-block
		vertical-align top
	&__logo
		margin-right r-percent(38,1180)
		// margin-bottom 20px
		padding-top 3px
		width r-percent(261,1180)
		height 78px
		+below($tablet)
			width r-percent(550,1180)
			min-width r-percent(500,1180)
	&__logo,
	&__left
		float left
	&__left
		position static
		z-index 1
		float right
		width r-percent(880,1180)
		font-size 0
		+below($tablet)
			position absolute
			top 0
			// left r-percent(90,1180)
			left 0
			right 0
			padding 0 5px
			float none
			width auto
			font-size 16px
			display inline-block
			vertical-align top
			text-align justify
			&:after
				content ""
				display inline-block
				width 100%
	&__menu-trigger
		margin 20px 0 20px 0
		display none
		bg($burger-icon)
		text-indent -9999px
		+below($tablet)
			display inline-block
			background url('../images/general/burger-icon-mobile.png') 0 0 no-repeat
	&__cities
		margin-top 22px
		padding-left 3px
		font-family $pt-serif-bldit
		line-height 1
		+below($tablet-l)
			margin-top 10px
		+below($mobile-l)
			margin-top 0
	&__cities-link
		margin-left 42px
		font-size 14px
		text-decoration underline
		color $text-color
		+below($mobile-l)
			margin-left 0
			display block
			line-height 20px
		&:hover
			text-decoration none
		&:first-child
			margin-left 0
	&__phones
		position relative
		// top 60px
		padding-top 13px
		margin-right r-percent(60px,880)
		width r-percent(225,880)
		+below($tablet)
			position absolute
			top 60px
			right 10px
			margin-right 0
			padding-top 0
			width r-percent(600,1180)
			min-width r-percent(400,1180)
	&__working-hours
		padding-top 12px
		margin-right r-percent(60,880)
		width r-percent(92,880)
		+below($desktop)
			display none
	&__basket
		padding-right  r-percent(36,880)
		margin-top 6px
		margin-bottom 14px
		width r-percent(274,880)
		background url('%=static=%/general/header-basket-border.png') 100% 0 repeat-y
		+below($desktop)
			width r-percent(428,880)
			// padding-right 20px
		+below($tablet)
			margin-top 10px
			margin-left r-percent(20,1180)
			margin-left 0
			padding 0
			width 40px
			background none
	&__pers-order-w
		position relative
	&__pers-order
		position relative
		margin-left 0
		+below($desktop)
			margin-right 20px
			display block
			width 96%
		+below($tablet-l)
			display none
		+below($tablet)
			display none

	&__pers-order-faq
		position absolute
		top -8px
		right 11px
		content ""
		bg($question-icon)
		text-indent -9999px
	&__user-auth
		padding-top 26px
		// width r-percent(166,880)
		width r-percent(166,880)
		+below($tablet)
			padding-top 10px
			width auto

	&__catalog
		// position relative
		display none
		+below($tablet)
			margin-top 10px
			width r-percent(500, 1180)
			display inline-block
			vertical-align top
	&__search
		margin-right 0
		padding 10px 0 10px 0
		display none
		+below($tablet)
			padding-top 18px
			padding-bottom 0
			width 30px
			display inline-block
			vertical-align top

	&__menu
		position absolute
		left 0
		right 0
		z-index 1
		top 100%
		margin auto
		width 1180px
		+below($desktop)
			top 97%
			width auto
		+below($tablet)
			position static
			// position absolute
			top 0
			right auto
			right 0
			left 0
			padding 10px 8px
			display inline-block
			vertical-align top
			margin 0 0 0 0
			float left
			width auto
		.menu
			padding-top 6px
			+below($tablet-l)
				padding 8px r-percent(30,1180) 8px r-percent(30, 1180)

.logo
	display block

.header-phones
	text-align right
	&__top
		white-space nowrap
	&__code,
	&__w
		display inline-block
		vertical-align top
	&__code
		margin-top 12px
		margin-right r-percent(18,225)
		// width r-percent(74,225)
		width r-percent(74,225)
		height 46px
		// background url('%=static=%/general/phone-code.png') no-repeat
		// background-size cover
		// text-indent -9999px
		img
			max-width 100%
			height auto
		+below($desktop)
			margin-top 6px
		+below($tablet)
			margin-top 8px
			margin-right r-percent(8,1180)
	&__w
		margin-bottom 12px
		+below($mobile-l)
			margin-bottom 6px
	&__phone
		margin-bottom 11px
		font-family $pt-serif-bld
		font-size 26px
		line-height 1
		span
			display none
		i
			display none
		+below($desktop)
			font-size 20px
		+below($tablet)
			font-size 26px
		+below($mobile-l)
			font-size 24px
		+below($mobile-m)
			font-size 22px
		+below($mobile)
			font-size 20px
	&__button
		position relative
		margin-bottom 16px
		margin-left 32px
		display inline-block
		vertical-align top
		color $text-color
		font-family $pt-serif-bldit
		font-size 14px
		line-height 1
		text-decoration underline
		&:hover
			text-decoration none
		&:after
			position absolute
			top -9px
			right -43px
			content ""
			bg($phone-icon)
		+below($desktop)
			margin-left 0
		+below($tablet-l)
			margin-left 0
			display none
			margin-right 36px
			white-space nowrap

		+below($tablet)
			display block
		+below($mobile)
			font-size 12px
	&__button-w
		position relative
		margin-right 48px
		+below($tablet)
			margin-right 0
		+below($mobile-l)
			margin-top 3px

.working-hours
	bg($working-hours)
	text-indent -9999px

.head-basket
	&__button
		position relative
		padding-top 18px
		padding-bottom 12px
		padding-left r-percent(58,280)
		display block
		color $text-color
		font-family $pt-serif-bldit
		font-size 14px
		line-height 1
		text-decoration none
		white-space normal
		+below(880px)
			padding-top 8px
		span
			text-decoration underline
			line-height 18px
			+below($tablet)
				display none
		.head-basket__quant
			position absolute
			bottom 0
			right 0
			z-index 1
			display none
			padding 0 4px
			min-width 20px
			background #FFF
			font-family $pt-sans-bld
			color $text-color
			text-align center
			text-indent 0
			text-decoration none
			border 1px solid $text-color
			border-radius 50%
			+below($tablet)
				display block

		+below($tablet)
			padding 0
			width 40px
			height 40px
			text-indent -9999px
		&:hover
			span
				text-decoration none
		&:after
			position absolute
			top 0
			left 0
			content ""
			bg($basket-icon)
			+below($tablet)
				background url('../images/general/basket-icon-mobile.png') 50% 0 no-repeat


.head-catalog
	// position relative
	&__button
		border 1px solid $text-color
		display block
		vertical-align top
		border-radius 7px
		margin-left 0
		padding 10px 10px 10px 10px
		color $text-color
		font-family $pt-sans-bld
		font-size 16px
		text-align center
		text-decoration none
		&:hover
			text-decoration underline
	&__list-w
		position absolute
		top 0
		left 0
		right 0
		padding 20px
		display block
		background #f1eeeb
		visibility hidden
		transform translateY(-100%)
		transition transform .2s ease
	&__list-w_active
		top 60px
		visibility visible
		transform translateY(0%)

	&__item
		margin-bottom 10px
	&__link
		font-family $pt-serif-bldit
		font-size 18px
		color $text-color
		text-decoration none
		&:hover
			text-decoration underline

.head-user-auth
	padding-left r-percent(40, 166)
	+below($desktop)
		padding-left 20px
	+below($tablet)
		padding-left 0
	&__icon
		bg($user-icon)
		display none
		+below($tablet)
			display block
			background url('../images/general/user-icon-mobile.png') 50% 0 no-repeat
	&__list
		+below($tablet)
			display none
	&__item
		position relative
		margin-bottom 20px
	&__link
		position relative
		color $text-color
		font-family $pt-serif-bldit
		font-size 14px
		line-height 1
		text-decoration underline
		&:hover
			text-decoration none
	&__link-enter,
	&__link-reg
		&:after
			position absolute
			top 50%
			right 0
			content ""
	&__link-enter
		&:after
			right -40px
			margin-top -7px
			bg($enter-icon)
	&__link-reg
		&:after
			right -20px
			margin-top -6px
			bg($reg-icon)

	&__form-field
		margin-bottom 10px
	&__input
		border 1px solid #d4d0cb
		padding 10px
		width 100%
		height 36px
		background transparent
		font-family $pt-sans-bldit
		font-size 14px
		color $text-color
		+placeholder()
			color $text-color
		&.error
			border 1px solid red
	&__form-bottom
		clr()

	&__form-checkbox
		float left
	&__checkbox
		border 1px solid $text-color
		margin-right 5px
		width 14px
		height 14px
	&__checkbox-label
		font-family $pt-sans-bldit
		font-size 14px
		line-height 18px
		vertical-align top
		cursor pointer
	&__forget
		float right
		font-family $pt-sans-bldit
		font-size 14px
		color $text-color
		line-height 18px
		text-decoration underline
		&:hover
			text-decoration none

	&__captcha-text
		margin-bottom 10px
		font-family $pt-sans-bldit
		font-size 14px
		color $text-color
		text-align left
	&__form-body
		padding-bottom 20px
	&__form-submit
		position absolute
		right 0
		bottom -60px
		left 0
		margin-left 0
		margin-right 0
		padding 10px 0
		background rgba(245,240,237, 1)
	&__submit
		position relative
		z-index 0
		border none
		padding 10px
		width 100%
		background transparent
		font-family $pt-sans-bldit
		font-size 16px
		color $text-color
		&:after
			position absolute
			top 12px
			left 12px
			right 12px
			bottom 12px
			content ""
			opacity .5
			z-index -1
			background #e0deda

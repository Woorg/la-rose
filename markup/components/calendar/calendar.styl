.calendar
	margin-top -12px


#ui-datepicker-div
	display none

.ui-datepicker
	position relative
	z-index 0
	margin-top 12px
	margin-left 12px
	margin-right 12px
	padding 20px 15px 16px 16px
	min-width 230px
	color $text-color
	&:after
		position absolute
		top 0
		left 12px
		right 12px
		bottom 0
		content ""
		opacity .5
		z-index -1
		background rgb(224, 222, 218)
		box-shadow 0px 5px 0px #e0deda,0px -5px 0px #e0deda,-5px 0px 0px #e0deda,5px 0px 0px #e0deda,          2px 7px 0px #b9b3ad,-2px 7px 0px rgb(185, 179, 173),2px -7px 0px #b9b3ad,-2px -7px 0px #b9b3ad,     7px   2px 0px #b9b3ad,7px  -2px 0px #b9b3ad,-7px 2px  0px #b9b3ad,-7px -2px 0px #b9b3ad,      4px 10px 0px #efeeec,-4px 10px 0px rgb(239, 238, 236),4px -10px 0px #efeeec,-4px -10px 0px rgb(239, 238, 236),     10px   4px 0px #efeeec,10px  -4px 0px #efeeec,-10px 4px  0px #efeeec,-10px -4px 0px #efeeec,        6px 12px 0px #c5c0bb,-6px 12px 0px #c5c0bb,6px -12px 0px #c5c0bb,-6px -12px 0px #c5c0bb,     12px  6px 0px #c5c0bb,12px -6px 0px #c5c0bb,-12px 6px  0px #c5c0bb,-12px -6px 0px #c5c0bb

	+below($mobile-m)
		padding-left 5px
		padding-right 5px
	+below($mobile)
		padding-left 0
		padding-right 0

	.ui-datepicker-calendar
		width 100%
	.ui-datepicker-header
		position relative
		min-height 40px
		+below($mobile-m)
			margin-right 0
	.ui-datepicker-title
		padding-top 6px
		color #786854
		font-family $pt-sans-bld
		font-size 16px
		line-height 1
		text-align center
	.ui-datepicker-prev,
	.ui-datepicker-next
		position absolute
		top 0
		content ""
		cursor pointer
		span
			display block
			text-indent -9999px
	.ui-datepicker-prev
		left 0
		span
			bg($calendar-left)
	.ui-datepicker-next
		right 0
		span
			bg($calendar-right)

	th
		padding 10px 10px 16px 10px
		color #000
		font-family $pt-sans-reg
		font-size 16px
		line-height 1
		+below($tablet)
			padding 10px 5px 16px 5px
			font-size 14px
	td
		a
			margin-bottom 6px
			padding 9px 2px 0 2px
			display inline-block
			vertical-align top
			width 32px
			height 32px
			font-family $pt-sans-bldit
			font-size 16px
			line-height 1
			text-align center
			color #555
			text-decoration none
			+below($tablet)
				width 24px
				height 24px
				font-size 14px
			+below($mobile-m)
				width 26px
	.ui-datepicker-current-day
		a
			background #ac9779

		.ui-state-active
			color #FFF


.form
	margin-top 60px
	font-family $pt-sans-it
	font-size 14px
	+below($desktop)
		width auto
	&__body
		position relative
		z-index 0
		margin-bottom 30px
		padding 26px 6px 14px
		background transparent
		color $text-color
		&:after
			position absolute
			top 12px
			left 12px
			right 12px
			bottom 12px
			content ""
			opacity .5
			z-index -1
			background rgb(224, 222, 218)
			box-shadow 0px 5px 0px #e0deda,0px -5px 0px #e0deda,-5px 0px 0px #e0deda,5px 0px 0px #e0deda,          2px 7px 0px #b9b3ad,-2px 7px 0px rgb(185, 179, 173),2px -7px 0px #b9b3ad,-2px -7px 0px #b9b3ad,     7px   2px 0px #b9b3ad,7px  -2px 0px #b9b3ad,-7px 2px  0px #b9b3ad,-7px -2px 0px #b9b3ad,      4px 10px 0px #efeeec,-4px 10px 0px rgb(239, 238, 236),4px -10px 0px #efeeec,-4px -10px 0px rgb(239, 238, 236),     10px   4px 0px #efeeec,10px  -4px 0px #efeeec,-10px 4px  0px #efeeec,-10px -4px 0px #efeeec,        6px 12px 0px #c5c0bb,-6px 12px 0px #c5c0bb,6px -12px 0px #c5c0bb,-6px -12px 0px #c5c0bb,     12px  6px 0px #c5c0bb,12px -6px 0px #c5c0bb,-12px 6px  0px #c5c0bb,-12px -6px 0px #c5c0bb
	&__w
		margin auto
		max-width 498px
		+below($tablet)
			padding 0 10px
			width auto
	&__row
		margin-bottom 11px
	&__textarea
		min-height 158px
	&__input,
	&__textarea
		border 2px solid #d5d1ca
		padding 6px 8px 3px
		width 100%
		background-color #f0eeea
		color #786854
		font-family $pt-sans-it
		font-size 14px
		line-height 16px
		+placeholder()
			color #9c9284
		&.error
			border 2px solid red

	&__file
		color #786854
	&__select
		border 2px solid #d5d1ca
		width 100%
		background-color #f0eeea
		overflow hidden
	.select
		border none
		padding 6px 8px 3px 3px
		background #f0eeea
		width 110%
		color #786854
		font-family $pt-sans-it
		font-size 14px
		line-height 16px
		cursor pointer
	&__bottom
		margin-bottom 50px
		// margin-right 15px
		// margin-left 15px
		text-align right
		clr()
	&__button-w
		margin-left 50px
		+below($tablet)
			margin-left 0
			display block
			width 100%
			text-align center
	&__button-w
		.form__submit,
		.form__button_back
			@extends .button
			padding-left 24px
			padding-right 24px
			color #564d3e
			font-family $pt-sans-bldit
			font-size 16px
			line-height 30px
			text-decoration none
			z-index 0
			&:hover
				text-decoration underline
	&__button-w
		+below($tablet)
			margin-left 0
			margin-bottom 30px
	.form__button-w
		position relative
		z-index 0
		display inline-block
		vertical-align top
		&:after
			position absolute
			top 0
			left 12px
			right 12px
			bottom 0
			content ""
			opacity .5
			z-index -1
			background rgb(224, 222, 218)
			box-shadow 0px 5px 0px #e0deda,0px -5px 0px #e0deda,-5px 0px 0px #e0deda,5px 0px 0px #e0deda,          2px 7px 0px #b9b3ad,-2px 7px 0px rgb(185, 179, 173),2px -7px 0px #b9b3ad,-2px -7px 0px #b9b3ad,     7px   2px 0px #b9b3ad,7px  -2px 0px #b9b3ad,-7px 2px  0px #b9b3ad,-7px -2px 0px #b9b3ad,      4px 10px 0px #efeeec,-4px 10px 0px rgb(239, 238, 236),4px -10px 0px #efeeec,-4px -10px 0px rgb(239, 238, 236),     10px   4px 0px #efeeec,10px  -4px 0px #efeeec,-10px 4px  0px #efeeec,-10px -4px 0px #efeeec,        6px 12px 0px #c5c0bb,-6px 12px 0px #c5c0bb,6px -12px 0px #c5c0bb,-6px -12px 0px #c5c0bb,     12px  6px 0px #c5c0bb,12px -6px 0px #c5c0bb,-12px 6px  0px #c5c0bb,-12px -6px 0px #c5c0bb

	&__captcha
		margin-bottom 26px
		font-size 0
		clr()
	&__captcha-img,
	&__captcha-text,
	&__captcha-input
		display inline-block
		vertical-align top
	&__captcha-img
		margin-right 6px
		width 180px
		height 40px
		img
			max-width 100%
			height auto
		+below(545px)
			margin-bottom 11px
	&__captcha-text
		width 84px
		font-size 14px
		color #9d9486
		+below(545px)
			width auto
	&__captcha-input
		float right
		width 196px
		+below(545px)
			float none
			width 100%
	&__row-title
		display inline-block
		vertical-align top
		font-family $pt-sans-it
		font-size 14px
		color #9c948c
	&__row-title_style-second
		margin-bottom 5px
		display block


.form_personal-order
	margin-left 0
	+below($mobile-l)
		margin-left 12px
	.form__captcha
		margin-bottom 26px
		font-size 0
		clr()
	.form__captcha-img,
	.form__captcha-text,
	.form__captcha-input
		display inline-block
		vertical-align top
	.form__captcha-img
		margin-right 6px
		width 180px
		height 40px
		img
			max-width 100%
			height auto
		+below(545px)
			margin-bottom 11px
	.form__captcha-text
		width 84px
		font-size 14px
		color #9d9486
		+below(545px)
			width auto
	.form__captcha-input
		float right
		width 196px
		+below(545px)
			float none
			width 100%
	.form__note
		margin-left 22px
		color #f00

.form_feedback
	margin-top 50px
	.form__body
		padding-top 16px
	.form__submit
		padding-right 20px
		padding-left 20px
		width 100%
		font-family $pt-serif-bldit
		text-align center
	.form__title
		margin-bottom 20px
		color #5c5039
		font-family $pt-serif-bldit
		font-size 15px
		line-height 1

.form_style-second
	margin-top 0
	.form__title
		// margin-left 26px
		margin-bottom 24px
		color #5c5039
		font-family $pt-sans-bldit
		font-size 16px
		line-height 18px
		+below($mobile-l)
			margin-left 12px
	.form__row-checkbox
		margin-top 14px
		margin-bottom 14px
	.form__button-w
		position relative
		z-index 0
		margin-left 40px
		&:after
			position absolute
			top 0
			left 12px
			right 12px
			bottom 0
			content ""
			opacity .5
			z-index -1
			background rgb(224, 222, 218)
			box-shadow 0px 5px 0px #e0deda,0px -5px 0px #e0deda,-5px 0px 0px #e0deda,5px 0px 0px #e0deda,          2px 7px 0px #b9b3ad,-2px 7px 0px rgb(185, 179, 173),2px -7px 0px #b9b3ad,-2px -7px 0px #b9b3ad,     7px   2px 0px #b9b3ad,7px  -2px 0px #b9b3ad,-7px 2px  0px #b9b3ad,-7px -2px 0px #b9b3ad,      4px 10px 0px #efeeec,-4px 10px 0px rgb(239, 238, 236),4px -10px 0px #efeeec,-4px -10px 0px rgb(239, 238, 236),     10px   4px 0px #efeeec,10px  -4px 0px #efeeec,-10px 4px  0px #efeeec,-10px -4px 0px #efeeec,        6px 12px 0px #c5c0bb,-6px 12px 0px #c5c0bb,6px -12px 0px #c5c0bb,-6px -12px 0px #c5c0bb,     12px  6px 0px #c5c0bb,12px -6px 0px #c5c0bb,-12px 6px  0px #c5c0bb,-12px -6px 0px #c5c0bb
		&:first-child
			margin-left 0
		+below($tablet)
			// margin-left 0
			margin-left 0
			width 100%
	.form__button
		margin-left 20px
		padding 12px 18px 10px
		@extends .button
		z-index 0
		color #786b58
		font-family $pt-sans-bldit
		font-size 16px
		line-height 30px
		text-decoration none
		+below($tablet)
			margin-left 0
			width 100%
			text-align center
	.form__row_radio
		font-size 0
	.form__radio
		display inline-block
		vertical-align top
	.form__button_back
		+below($tablet)
			margin-bottom 10px
.form_personal-data
	// margin-top 60px
	margin-top 0
	.form__body
	// 	padding-top 13px
		padding-right 26px
		padding-left 26px
		+below($mobile-l)
			padding-right 6px
			padding-left 6px
	.form__title
		margin-bottom 16px
		margin-left 12px

.form_delivery
	.form__body
		padding-right 26px
		padding-left 26px
		+below($mobile-l)
			padding-right 6px
			padding-left 6px
	.form__w
		width auto
	.form__select
		position relative
		border 2px solid #d5d1ca
		&:after
			position absolute
			top 50%
			right 8px
			margin-top -4px
			content ""
			width 0
			height 0
			border-style solid
			border-width 9px 8.5px 0 8.5px
			border-color #d8d1c8 transparent transparent transparent
	.form__row-home,
	.form__row-home-2
		.form__input
			margin-right 2.6%
			width 48.2%
			&:last-child
				margin-right 0
			+below($desktop)
				width 48.3%
			+below($tablet-l)
				margin-bottom 11px
				margin-right 0
				width 100%
				&:last-child
					margin-bottom 0
	.form__row_radio-bottom
		.form__radio
			margin-right 10px
			margin-bottom 10px
			+below($desktop)
				width 30%
				&:nth-child(3n)
					margin-right 0
			+below($tablet)
				margin-right 0
				width 49%

.form__row-delivery-type
	.form__radio
		margin-right 25px
		:last-child
			margin-right 0

.form__delivery-courier,
	.form__delivery-self
		display none
	.form__delivery-courier_active,
	.form__delivery-self_active
		display block

.form_recipient
	width auto
	.form__body
		padding-right 26px
		padding-left 26px
		+below($mobile-l)
			padding-right 6px
			padding-left 6px
	.form__w
		width auto
	.checkbox
		margin-right 24px
		display inline-block
		vertical-align top
		&:last-child
			margin-right 0
		+below(490px)
			margin-bottom 11px
			&:last-child
				margin-bottom 0
.form_payment
	// width 434px
	width auto
	+below($tablet)
		width auto
	.form__body
		padding-right 36px
		padding-left 36px
		+below($mobile-l)
			padding-right 16px
			padding-left 16px
	.form__w
		margin 0
		width auto
	.form__row
		margin-bottom 16px
	.form__radio_visa,
	.form__radio_webmoney,
	.form__radio_yandex,
	.form__radio_cash,
	.form__radio_deposit,
	.form__radio_salon
		position relative
		margin-left 42px
		&:after
			position absolute
			top 50%
			left -42px
			margin-top -12px
			content ""
			bg($payment-icon)
	.form__radio_deposit
		&:after
			bg($payment-icon-2)

	.radio__radio
		display inline-block
		vertical-align middle

.form_review
	.form__top
		font-size 0
	.form__row
		margin-bottom 20px
	.form__row_top
		margin-bottom 11px
	.form__row-title
		display inline-block
		vertical-align top
		font-family $pt-sans-it
		font-size 14px
		color #9c948c
		+below($tablet)
			margin-bottom 11px
	.form__row-title_style-second
		display block

	.form__radio-w
		margin-left 40px
		display inline-block
		vertical-align top
		+below($tablet)
			margin-left 0

	.form__radio
		margin-right 10px


.form_settings
	.form__w
		padding-left 20px
		padding-right 20px
		width auto

	.form__title
		margin-left 0

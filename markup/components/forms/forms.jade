mixin personal-order-form(data)

	.form.form_personal-order
		form.form__form(action="#", method="post")
			.form__body
				.form__w
					.form__row
						input.form__input(type="text", value="", placeholder="Введите стоимость букетов*")
					.form__row
						input.form__input(type="text", value="", placeholder="Ваши крнтакты*")
					.form__row
						textarea.form__textarea(name="#" placeholder='Опишите Ваш заказ*')
					.form__row
						.form__captcha
							.form__captcha-img
								img(src="assets/images/content/captcha.jpg", alt="")
							.form__captcha-text Контрольный код*
							input.form__captcha-input.form__input(type="text", value="", placeholder="Текст с картинки")
				.form__note *Все поля обязательны для заполнения

			.form__bottom
				input.form__submit(type="submit", value="Добавить в корзину")


mixin feedback-form(data)
	.form.form_feedback
		.form__form
			.form__body
				.form__w
					.form__title Форма обратной связи
					.form__row
						input.form__input(type="text", value="", placeholder="Ваше имя*")
					.form__row
						input.form__input(type="text", value="", placeholder="Телефон*")
					.form__row
						input.form__input(type="text", value="", placeholder="Телефон 2")
					.form__row
						textarea.form__textarea(name="#" placeholder="Текст обращения")

			.form__bottom
				input.form__submit(type="submit", value="Отправить")

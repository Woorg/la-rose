.popup
	position relative
	margin auto
	padding 22px
	width 340px
	background url('../images/general/header-popup-bg.jpg') 0 0 repeat-y
	box-shadow 0 0 19px 1px rgba(0, 0, 0, 0.3)
	transition opacity .2s ease
	+below($mobile-m)
		width 100%
	button.mfp-close
		position absolute
		top 0
		right -25px
		display block
		bg($close)
		text-indent -9999px
		+below($mobile-l)
			top -25px
			right 0
	&__form-body
		position relative
		z-index 0
		margin-bottom 40px
		padding 18px 18px 12px
		&:after
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			content ""
			opacity .5
			z-index -1
			background rgb(224, 222, 218)
			box-shadow 0px 5px 0px #e0deda,0px -5px 0px #e0deda,-5px 0px 0px #e0deda,5px 0px 0px #e0deda,          2px 7px 0px #b9b3ad,-2px 7px 0px rgb(185, 179, 173),2px -7px 0px #b9b3ad,-2px -7px 0px #b9b3ad,     7px   2px 0px #b9b3ad,7px  -2px 0px #b9b3ad,-7px 2px  0px #b9b3ad,-7px -2px 0px #b9b3ad,      4px 10px 0px #efeeec,-4px 10px 0px rgb(239, 238, 236),4px -10px 0px #efeeec,-4px -10px 0px rgb(239, 238, 236),     10px   4px 0px #efeeec,10px  -4px 0px #efeeec,-10px 4px  0px #efeeec,-10px -4px 0px #efeeec,        6px 12px 0px #c5c0bb,-6px 12px 0px #c5c0bb,6px -12px 0px #c5c0bb,-6px -12px 0px #c5c0bb,     12px  6px 0px #c5c0bb,12px -6px 0px #c5c0bb,-12px 6px  0px #c5c0bb,-12px -6px 0px #c5c0bb
		+below($mobile-l)
			padding-left 6px
			padding-right 6px
	&__form-title
		margin-bottom 20px
		color #564d3e
		font-family $pt-sans-bldit
		font-size 22px
		line-height 1
		text-align center
	&__form-field
		margin-bottom 15px
	&__input
		border 1px solid #d4d0cb
		padding 10px
		width 100%
		height 36px
		background transparent
		font-family $pt-sans-bldit
		font-size 14px
		color $text-color
		+placeholder()
			color $text-color
		&.error
			border 1px solid red

	&__captcha-text
		padding-right 30px
	&__form-submit
		position relative
		z-index 0
		padding-top 0
		padding-bottom 0
		&:after
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			content ""
			opacity .5
			z-index -1
			background rgb(224, 222, 218)
			box-shadow 0px 5px 0px #e0deda,0px -5px 0px #e0deda,-5px 0px 0px #e0deda,5px 0px 0px #e0deda,          2px 7px 0px #b9b3ad,-2px 7px 0px rgb(185, 179, 173),2px -7px 0px #b9b3ad,-2px -7px 0px #b9b3ad,     7px   2px 0px #b9b3ad,7px  -2px 0px #b9b3ad,-7px 2px  0px #b9b3ad,-7px -2px 0px #b9b3ad,      4px 10px 0px #efeeec,-4px 10px 0px rgb(239, 238, 236),4px -10px 0px #efeeec,-4px -10px 0px rgb(239, 238, 236),     10px   4px 0px #efeeec,10px  -4px 0px #efeeec,-10px 4px  0px #efeeec,-10px -4px 0px #efeeec,        6px 12px 0px #c5c0bb,-6px 12px 0px #c5c0bb,6px -12px 0px #c5c0bb,-6px -12px 0px #c5c0bb,     12px  6px 0px #c5c0bb,12px -6px 0px #c5c0bb,-12px 6px  0px #c5c0bb,-12px -6px 0px #c5c0bb
	&__submit
		border none
		padding 5px 10px 5px
		width 100%
		background transparent
		font-family $pt-sans-bldit
		font-size 16px
		color $text-color
.popup_pers-order
	position absolute
	top 0
	right -12px
	width 300px
	visibility hidden
	opacity 0
	will-change transform
	transform translateX(1000%)
	transition transform .3s ease
	.popup__form-body
		margin-bottom 0
		padding-top 10px
		padding-left 14px
		padding-right 14px
		padding-bottom 10px
	p
		font-family $pt-sans-it
		font-size 14px
		line-height 20px
	.popup__close
		position absolute
		top 0
		right -25px
		z-index 2
		display block
		bg($close)
		text-align left
		text-indent -9999px

.popup_pers-order-active
	z-index 2
	visibility visible
	opacity 1
	transform translateX(0)

.header_fixed
	.popup_pers-order
		+below($desktop)
			display none





















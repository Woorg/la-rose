// .portfolio


.carousel
	position relative
	margin-bottom 20px
	&__title
		margin-bottom 14px
		color #5d523b
		font-family $pt-sans-bldit
		font-size 20px
		line-height 30px
	&__list
		position relative
		font-size 0
		text-align center
	&__item
		margin-right 18px
		display inline-block
		vertical-align top
		&:last-child
			margin-right 0
	&__item-img
		margin-bottom 12px
		// width 100%
		// height 173px
		background-color #fff
		text-align center
	.carousel__item-img
		img
			max-width 100%
			height auto
			display inline-block
			vertical-align middle
	&__item-img
		a
			display block
			height 100%
			text-decoration none
			&:after
				content ""
				display inline-block
				vertical-align middle

.carousel_style-first
	.carousel__list
		padding-left 44px
		padding-right 44px
		+below($tablet)
			padding-left 26px
			padding-right 26px
		+below($mobile-l)
			padding-left 0
			padding-right 0
	.owl-nav
		position absolute
		top 50%
		left 0
		right 0
		z-index 0
	.owl-prev,
	.owl-next
		position absolute
		top 0
		content ""
		margin-top -18px
		z-index 1
	.owl-next
		right 0
		bg($relative-right)
	.owl-prev
		left 0
		bg($relative-left)

.carousel_style-second
	.carousel__list
		text-align justify
		white-space nowrap
		&:after
			content ""
			display inline-block
			vertical-align top
			width 100%
		+below($tablet-l)
			white-space normal
	.carousel__item
		margin-right r-percent(44,825)
		width r-percent(170, 825)
		display inline-block
		vertical-align top
		&:last-child
			margin-right 0
		+below($tablet-l)
			margin-right 3%
			width 30%
			&:nth-child(4)
				display none
		+below(576px)
			width 48%
			&:nth-child(3)
				display none
			&:nth-child(2)
				margin-right 0
.carousel_style-third
	.carousel__list
		// text-align justify
		// white-space nowrap
		&:after
			content ""
			display inline-block
			vertical-align top
			width 100%
		+below($tablet-l)
			white-space normal

	.carousel__item
		margin-right r-percent(44,825)
		width r-percent(170, 825)
		display inline-block
		vertical-align top
		&:last-child
			margin-right 0
		+below($tablet-l)
			margin-right 3%
			width 30%
			&:nth-child(4)
				display none
		+below(576px)
			width 48%
			&:nth-child(3)
				display none
			&:nth-child(2)
				margin-right 0
	.carousel__item-img
		background transparent

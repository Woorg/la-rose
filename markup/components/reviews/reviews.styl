.reviews
	color #5c5039
	font-family $pt-sans-it
	font-size 15px
	// &__list
	&__item
		margin-bottom 30px

	&__item-date
		margin-bottom 15px
		font-family $pt-sans-bldit
	&__item-w
		position relative
		clr()
	&__item-img
		margin-right r-percent(46, 815)
		float left
		width r-percent(100, 815)
		min-width 70px
		height r-percent(100, 815)
		img
			max-width 100%
			height auto
	&__item-text
		line-height 20px

	&__pagination
		margin-top 68px
		margin-bottom 68px
		clr()
		.pagination
			float right

	&__title
		margin-bottom 28px
		font-family $pt-sans-bldit
		font-size 16px
		line-height 20px
	&__text
		margin-bottom 42px
		line-height 20px

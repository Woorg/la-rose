doctype html
html(class="no-js", lang="ru")

	include ../components/head/head
	include ../components/header/header
	include ../components/search-form/search-form
	include ../components/breadcrumbs/breadcrumbs
	include ../components/portfolio/portfolio

	include ../components/pagination/pagination

	include ../components/side/side
	include ../components/popup/popup


	include ../components/footer/footer

	- var pageTitle = "Портфолио"

	head
		+head(head.defaults)
	body.page
		|%=symbols=%
		.page__w
			.page__wrapper
				+header-second()
				main.main.main_inner.main_portfolio
					.main__content
						.main__search-form
							+search-form()
						.main__breadcrumbs
							+breadcrumbs()
								ul.breadcrumbs__list
									li.breadcrumbs__item
										a.breadcrumbs__link(href="#link-1") Главная
										| >
									li.breadcrumbs__item
										a.breadcrumbs__link(href="#link-2") Портфолио

						h1.main__title.main__title_style-second Портфолио

						+portfolio()

						.main__pagination
							+pagination-third()

							a.button.button_style-4(href='#') Показать еще

					.main__side
						.side
							.side__block
								.side-nav.side-nav_style-fourth
									ul.side-nav__list
										li.side-nav__item
											a.side-nav__link(href="#link") Игрушки из живых цветов
										li.side-nav__item
											a.side-nav__link(href="#link") Горшечные растения
										li.side-nav__item
											a.side-nav__link(href="#link") Подарки
							.side__block
								.side__buttons
									a.side__button(href="#link") Мы Вконтакте
									a.side__button(href="#link") Отзывы

							.side__block
								.side__vk-widget
									img(src="%=static=%/images/content/vk-widget.jpg", alt="vk widget")


				.page__buffer

			.page__footer
				+footer()
			+popup()
			+popup-quick-order()

		script(src='%=static=%js/separate-js/svg4everybody.min.js')
		script svg4everybody();


		//- Main scripts. You can replace it, but I recommend you to leave it here
		script(src='%=static=%js/main%=hash=%%=min=%.js')

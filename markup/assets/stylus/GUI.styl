// GUI stylies of the project


.in
	margin auto
	padding-left r-percent(10,1200)
	padding-right r-percent(10,1200)
	width 1200px
	+below(1180px)
		width 100%



.button
	border none
	display inline-block
	vertical-align top
	background #E6E4DF
	background rgba(230, 229, 223, 0.7)
	color $text-color
	box-shadow 0px 5px 0px #e0deda,0px -5px 0px #e0deda,-5px 0px 0px #e0deda,5px 0px 0px #e0deda,
				2px 7px 0px #b9b3ad,-2px 7px 0px #b9b3ad,2px -7px 0px #b9b3ad,-2px -7px 0px #b9b3ad,
				7px 2px 0px #b9b3ad,7px -2px 0px #b9b3ad,-7px 2px 0px #b9b3ad,-7px -2px 0px #b9b3ad,
				4px 10px 0px #efeeec,-4px 10px 0px #efeeec,4px -10px 0px #efeeec,-4px -10px 0px #efeeec,
				10px 4px 0px #efeeec,10px -4px 0px #efeeec,-10px 4px 0px #efeeec,-10px -4px 0px #efeeec,
				6px 12px 0px #c5c0bb,-6px 12px 0px #c5c0bb,6px -12px 0px #c5c0bb,-6px -12px 0px #c5c0bb,
				12px 6px 0px #c5c0bb,12px -6px 0px #c5c0bb,-12px 6px 0px #c5c0bb,-12px -6px 0px #c5c0bb


.button_style-1
	// padding 8px 45px 6px 45px
	padding 0px 38px 0px 38px
	font-family $pt-sans-bldit
	font-size 16px
	line-height 32px
	text-decoration none
	white-space nowrap
	+below($desktop)
		padding-left 20px
		padding-right 20px
.button_style-2
	padding 26px 30px 26px 30px
	font-family $pt-serif-bldit
	font-size 30px
	line-height 36px
	text-decoration none
	text-align center

.button_style-3
	padding 8px 2px 5px 10px
	font-family $pt-serif-bldit
	font-size 30px
	line-height 32px
	text-decoration none
	text-align center


.wysiwyg
	font-family $pt-sans-reg
	color $text-color
	line-height 24px
	h2
		margin-bottom 20px
		font-family $pt-sans-bldit
		font-size 24px
	h3
		margin-bottom 10px
		font-family $pt-sans-bld
		font-size 16px
	p
		margin-bottom 20px
		font-size 16px

	ul
		margin-bottom 20px
		li
			margin-bottom 0

	a
		color $text-color
		&:hover
			text-decoration underline





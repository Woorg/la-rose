	h3
		margin-bottom 10px
		font-family $pt-sans-bldit
		font-size 16px
		+below($tablet)
			font-size 16px
	p
		margin-bottom 20px
		font-size 15px
		+below($tablet)
			font-size 14px
	ul
		margin-bottom 20px
		margin-left 18px
		list-style initial
		li
			margin-bottom 0
	a
		color $text-color
		&:hover
			text-decoration underline
	i

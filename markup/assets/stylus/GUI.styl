// GUI stylies of the project

.in
	margin auto
	// padding-left r-percent(10,1180)
	padding-left 10px
	// padding-right r-percent(10,1180)
	padding-right 10px
	width 1200px
	+below(1180px)
		width auto

.button
	border none
	display inline-block
	vertical-align top
	background rgba(230, 229, 223, 0.7)
	color $text-color
	box-shadow 0px 5px 0px #e0deda,0px -5px 0px #e0deda,-5px 0px 0px #e0deda,5px 0px 0px #e0deda, 2px 7px 0px #b9b3ad,-2px 7px 0px #b9b3ad,2px -7px 0px #b9b3ad,-2px -7px 0px #b9b3ad, 7px 2px 0px #b9b3ad,7px -2px 0px #b9b3ad,-7px 2px 0px #b9b3ad,-7px -2px 0px #b9b3ad, 4px 10px 0px #efeeec,-4px 10px 0px #efeeec,4px -10px 0px #efeeec,-4px -10px 0px #efeeec, 10px 4px 0px #efeeec,10px -4px 0px #efeeec,-10px 4px 0px #efeeec,-10px -4px 0px #efeeec, 6px 12px 0px #c5c0bb,-6px 12px 0px #c5c0bb,6px -12px 0px #c5c0bb,-6px -12px 0px #c5c0bb, 12px 6px 0px #c5c0bb,12px -6px 0px #c5c0bb,-12px 6px 0px #c5c0bb,-12px -6px 0px #c5c0bb


.button_style-1
	padding 0 38px 0 38px
	font-family $pt-sans-bldit
	font-size 16px
	line-height 32px
	text-decoration none
	white-space nowrap
	+below($desktop)
		padding-left 20px
		padding-right 20px
.button_style-2
	padding 26px 30px 26px 30px
	font-family $pt-serif-bldit
	font-size 30px
	line-height 36px
	text-decoration none
	text-align center

.button_style-3
	padding 8px 2px 5px 10px
	font-family $pt-serif-bldit
	font-size 30px
	line-height 32px
	text-decoration none
	text-align center

.button_style-pagination
	@extends .button

// tabs

.tabs
	&__nav
		font-size 0
		clr()
	&__nav-item
		display inline-block
		vertical-align top
	&__nav-link
		padding 10px
		display block
		font-family $pt-serif-bld
		font-size 16px
	&__nav-item
		&.active
			.tabs__nav-link
				background #f1eeeb
	&__w
		clr()
	&__tab
		display none

	&__tab
		&.active
			display block
.tabs_style-second
	.tabs__nav
		margin-bottom -2px
	.tabs__nav-item
		margin-right 3px
		&.active
			.tabs__nav-link
				background-color #CAC3BD
				color #212121
		&:last-child
			margin-right 0
	.tabs__nav-link
		border 2px solid #c7c2bc
		padding 14px 12px 11px
		color #555
		font-family $pt-sans-bldit
		font-size 18px
		text-decoration none
		border-radius 8px 8px 0 0
	.tabs__w
		border 2px solid #c7c2bc
		padding 20px 22px

// checkbox

.checkbox
	position relative
	padding-left 18px
	&__input
		position absolute
		top 0
		left 0
		width 14px
		height 14px
		border 1px solid #a5a5a5
		border-radius 1px 2px 2px 1px
	label
		display block
		color #655439
		font-family $pt-serif-reg
		font-size 14px
		line-height 16px
		cursor pointer
		text-overflow ellipsis
		overflow hidden
		white-space nowrap
.checkbox_style-second
	label
		font-family $pt-sans-it

.checkbox_style-third
	input
		top -1px
	label
		font-family $pt-sans-it
		color #786854
		white-space normal

// radio

.radio
	&__label
		color #786854
		font-family $pt-sans-it
		font-size 14px
		line-height 16px
		cursor pointer
	&__radio
		margin-right 6px
		display inline-block
		vertical-align middle



.wysiwyg
	font-family $pt-sans-reg
	color $text-color
	line-height 24px
	h2
		margin-bottom 20px
		font-family $pt-sans-bldit
		font-size 24px
		+below($tablet)
			font-size 20px
	h3
		margin-bottom 10px
		font-family $pt-sans-bld
		font-size 16px
		+below($tablet)
			font-size 16px
	p
		margin-bottom 20px
		font-size 16px
		+below($tablet)
			font-size 14px
	ul
		margin-bottom 20px
		li
			margin-bottom 0
	a
		color $text-color
		&:hover
			text-decoration underline

